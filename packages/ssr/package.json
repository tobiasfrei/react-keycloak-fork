{
  "name": "@react-keycloak-fork/ssr",
  "version": "4.0.0",
  "license": "MIT",
  "description": "Fork of https://github.com/react-keycloak/react-keycloak.git with updated packages for keycloak >=17 support. SSR bindings for Keycloak javascript adapter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobiasfrei/react-keycloak-fork.git"
  },
  "author": "Tobias Frei <mail@tobiasfrei.ch>",
  "bugs": {
    "url": "https://github.com/tobiasfrei/react-keycloak-fork/react-keycloak/issues"
  },
  "homepage": "https://github.com/tobiasfrei/react-keycloak-fork#readme",
  "keywords": [
    "react",
    "keycloak",
    "keycloak-js",
    "nextjs",
    "razzle"
  ],
  "main": "lib-commonjs/index.js",
  "jsnext:main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "lib-commonjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/reactkeycloak"
  },
  "scripts": {
    "clean": "rimraf lib lib-commonjs",
    "prebuild": "npm run clean",
    "compile:commonjs": "tsc --module commonjs --outDir lib-commonjs",
    "compile:esnext": "tsc --module esnext --outDir lib",
    "compile": "run-p compile:*",
    "fixmaps:lib": "tweak_sourcemap_paths -a --include 'lib/**/*.js.map' 'lib-commonjs/**/*.js.map'",
    "fixmaps": "run-p fixmaps:*",
    "build": "run-s compile fixmaps",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prepublishOnly": "npm run build && cp ../../LICENSE.md ."
  },
  "peerDependencies": {
    "keycloak-js": ">=17.0.0",
    "react": ">=18.0",
    "typescript": ">=3.8"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "@react-keycloak-fork/core": "file:../core",
    "detect-node": "^2.1.0",
    "hoist-non-react-statics": "^3.3.2",
    "js-base64": "^3.7.2",
    "js-cookie": "^3.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  }
}
